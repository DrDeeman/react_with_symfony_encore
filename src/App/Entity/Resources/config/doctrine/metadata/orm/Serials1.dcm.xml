<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Serials1" table="serials1">
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="serials1_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="name" type="string" column="name" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="logo" type="blob" column="logo" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="genre" type="string" column="genre" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">comedy</option>
      </options>
    </field>
    <field name="raiting" type="decimal" column="raiting" precision="10" scale="0" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="datetimeAdded" type="datetime" column="datetime_added" nullable="true">
      <options>
        <option name="default">now()</option>
      </options>
    </field>
    <field name="countSeazons" type="smallint" column="count_seazons" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
